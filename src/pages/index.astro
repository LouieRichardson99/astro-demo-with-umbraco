---
import Layout from '@layouts/Layout.astro';
import client from '@utils/umbraco-client';
import { MyCounter } from '@components/my-counter';

// Fetch our homepage content from Umbraco.
const homepage = await client.getContentByType('homePage');
const { title } = homepage[0].properties;
---

<Layout {title}>
  <main>
    <h1>{title}</h1>
    <p style="margin-bottom: 100vh;">
      Scroll down to load in our interactive island 🏝
    </p>
    <div class="web-component-container">
      <p>
        This is a Lit web component inside an Astro page as an interactive
        island 🤯
      </p>
      <MyCounter client:visible />
    </div>
  </main>
</Layout>

<style>
  .image-container {
    margin: 2rem 0 2rem 0;
    height: 100vh;
  }

  .image {
    width: 100%;
    height: max-content;
  }

  .web-component-container {
    margin-bottom: 5rem;
  }
</style>
